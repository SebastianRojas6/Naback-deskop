import {Background} from "background.slint";
import {PhotoBox} from "components/photo_box.slint";
import { ArrowHeader } from "components/buttons.slint";
export component Photos inherits Background {

    callback go_to_game();

    ArrowHeader {
        y: root.height * 0.019;
        scale: root.height / 750px;
        show_left: false;
        title: "Fotos";
        go_right => {
            go_to_game();
        }
    }

    Rectangle {
        x: root.width - self.width - root.width * 0.09;
        y: root.height * 0.019;
        width: root.height * 0.09;
        height: root.height * 0.08;
        clip: true;

        Image {
            width: parent.width;
            height: parent.height;
            source: @image-url("../assets/img/home.png");
        }
    }

    VerticalLayout {
        padding-top: parent.height * 0.09;
        spacing: parent.height * -0.01;

        HorizontalLayout {
            spacing: parent.width * 0.02;

            PhotoBox {
                img_name: "ferris";
            }

            PhotoBox {
                img_name: "cuy";
            }

            PhotoBox {
                img_name: "cuy";
            }
        }

        HorizontalLayout {
            spacing: parent.width * 0.02;
            PhotoBox {
                img_source: @image-url("../assets/img/cuy.png");
            }

            PhotoBox {
                img_source: @image-url("../assets/img/cuy.png");
            }

            PhotoBox {
                img_source: @image-url("../assets/img/cuy.png");
            }
        }
    }
}
