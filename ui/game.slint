import {Background} from "background.slint";

export component Game inherits Background {
    in-out property <int> score: 0;
    in-out property <int> time: 0;

    callback on_game_started;

    VerticalLayout {
        padding-top: root.height * 0.02;

        HorizontalLayout {
            alignment: center;
            spacing: root.width * 0.02;

            Rectangle {
                width: root.width * 0.09;
                height: root.height * 0.08;
                clip: true;

                Image {

                    height: parent.height;
                    width: parent.width;
                    source: @image-url("../assets/img/flecha_izquierda.png");
                }
            }

            Text {
                text: "Â¡Go!";
                color: #37383F;
                font-size: root.height * 0.08;
                font-family: "Minecraft";
                vertical-alignment: center;
                horizontal-alignment: center;
            }

            Rectangle {
                width: root.width * 0.09;
                height: root.height * 0.08;
                Image {
                    height: parent.height;
                    width: parent.width;
                    source: @image-url("../assets/img/flecha_derecha.png");
                }
            }
        }
    }

    Rectangle {
        x: root.width - self.width - root.width * 0.09;
        y: root.height * 0.019;
        width: root.height * 0.09;
        height: root.height * 0.08;
        clip: true;

        Image {

            width: parent.width;
            height: parent.height;
            source: @image-url("../assets/img/home.png");
        }
    }

    VerticalLayout {

        padding-top: 30px;

        alignment: center;

        HorizontalLayout {
            alignment: center;
            Rectangle {
                border-color: black;
                border-width: 2px;
                background: #D9D9D9;
                width: parent.width * 0.9;
                border-radius: 10px;
                height: 80%;
                clip: true;

                HorizontalLayout {
                    spacing: parent.width * 0.001;
                    padding: root.height * 0.05;
                    alignment: space-between;

                    Text {
                        text: "Score: \{score}";
                        color: #37383F;
                        font-family: "Minecraft";
                        font-size: 20px;
                    }

                    Text {
                        text: "Timer: \{time}";
                        color: #37383F;
                        font-family: "Minecraft";
                        font-size: 20px;
                    }
                }

                Rectangle {
                    width: parent.width;
                    height: 70%;
                    y: parent.height - self.height;

                    Image {
                        source: @image-url("../assets/img/background.png");
                        width: parent.width;
                        height: parent.height;
                    }
                }

                Rectangle {

                    width: parent.width * 0.1;
                    height: 40%;
                    y: parent.height - self.height - parent.height * 0.05;
                    x: parent.width * 0.1;
                    Image {
                        source: @image-url("../assets/img/h2.png");
                        width: parent.width;
                        height: parent.height;
                        image-fit: contain;
                    }
                }
            }
        }
    }
}