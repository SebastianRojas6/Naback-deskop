import {Background} from "background.slint";

export component Game inherits Background {
    in-out property <int> score: 0;

    Text {
        text: "Â¡Go!";
        color: #37383F;
        font-size: 70px;
        font-family: "Minecraft";
        height: parent.height * 0.90;
    }

    VerticalLayout {

        padding-top: 30px;

        alignment: center;

        HorizontalLayout {
            alignment: center;
            Rectangle {
                border-color: black;
                border-width: 2px;
                background: #D9D9D9;
                width: parent.width * 0.9;
                border-radius: 10px;
                height: 80%;
                clip: true;

                Text {
                    text: "Score: " + score;
                    color: #37383F;
                    height: parent.height * 0.90;
                    font-family: "Minecraft";
                    font-size: 20px;
                    x: parent.width * 0.05;
                    y: parent.height * 0.05;
                }

                Text {
                    text: ":Timer";
                    color: #37383F;
                    height: parent.height * 0.90;
                    font-family: "Minecraft";
                    font-size: 20px;
                    x: parent.width * 0.8;
                    y: parent.height * 0.05;
                }

                Rectangle {
                    width: parent.width;
                    height: 70%;
                    y: parent.height - self.height;

                    Image {
                        source: @image-url("../assets/img/background.png");
                        width: parent.width;
                        height: parent.height;
                    }
                }

                Rectangle {

                    width: parent.width * 0.1;
                    height: 40%;
                    y: parent.height - self.height - parent.height * 0.05;
                    x: parent.width * 0.1;
                    Image {
                        source: @image-url("../assets/img/h1.png");
                        width: parent.width;
                        height: parent.height;
                        image-fit: contain;
                    }
                }
            }
        }
    }
}
