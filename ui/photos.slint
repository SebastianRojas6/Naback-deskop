import {Background} from "background.slint";
import {PhotoBox} from "photo_box.slint";

export component Photos inherits Background {

    callback navigate();

    VerticalLayout {
        padding-top: root.height * 0.02;

        HorizontalLayout {
            alignment: center;
            spacing: root.width * 0.02;

            Rectangle {
                width: root.width * 0.09;
                height: root.height * 0.08;
                clip: true;
            }

            Text {
                text: "Fotos";
                color: #37383F;
                font-size: root.height * 0.08;
                font-family: "Minecraft";
                vertical-alignment: center;
                horizontal-alignment: center;
            }

            Rectangle {
                width: root.width * 0.09;
                height: root.height * 0.08;
                Image {
                    height: parent.height;
                    width: parent.width;
                    source: @image-url("../assets/img/flecha_derecha.png");
                }
            }
        }
    }

    Rectangle {
        x: root.width - self.width - root.width * 0.09;
        y: root.height * 0.019;
        width: root.height * 0.09;
        height: root.height * 0.08;
        clip: true;

        Image {
            width: parent.width;
            height: parent.height;
            source: @image-url("../assets/img/home.png");
        }
    }

    VerticalLayout {
        padding-top: parent.height * 0.09;
        spacing: parent.height * -0.01;

        HorizontalLayout {
            spacing: parent.width * 0.02;

            PhotoBox {
                img_name: "ferris";
            }

            PhotoBox {
                img_name: "cuy";
            }

            PhotoBox {
                img_name: "cuy";
            }
        }

        HorizontalLayout {
            spacing: parent.width * 0.02;
            PhotoBox {
                img_source: @image-url("../assets/img/cuy.png");
            }

            PhotoBox {
                img_source: @image-url("../assets/img/cuy.png");
            }

            PhotoBox {
                img_source: @image-url("../assets/img/cuy.png");
            }
        }
    }
}
