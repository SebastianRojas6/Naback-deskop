                horizontal-alignment: center;
            }

            Rectangle {
                width: root.width * 0.09;
                height: root.height * 0.08;
            }
        }
    }

    Rectangle {
        x: root.width - self.width - root.width * 0.09;
        y: root.height * 0.019;
        width: root.height * 0.09;
        height: root.height * 0.08;
        clip: true;

        Image {

            width: parent.width;
            height: parent.height;
            source: @image-url("../assets/img/home.png");
        }
    }

    HorizontalLayout {
        alignment: center;
        spacing: (parent.height - self.height);
        Rectangle {
            clip: true;
            height: parent.height * 0.8;
            width: parent.width * 0.3;

            y: ((parent.height - self.height) / 2) * 1.6;

            Image {
                height: parent.height;
                width: parent.width;
                source: @image-url("../assets/img/cuadro.png");
            }

            Rectangle {
                height: parent.height * 0.75;
                width: parent.width * 0.7;
                background: black;
                TextEdit {
                    width: parent.width;
                    height: parent.height;
                    font-size: parent.height * 0.1;
